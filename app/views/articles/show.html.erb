<div class="article_each">
  <table>
    <thead>
      <tr>
        <th><h3><%= @article.title %></h3></th>
      </tr>
    </thead>
    <tbody>
      <tr>
       <td><%= @article.text %></td>
      </tr>
    </tbody>
    <tbody>
      <tr>
        <td><%= render :partial => 'tag_list', locals: { tag_list: @article.tag_list } %></td>
      </tr>
    </tbody>
    <tbody>
      <tr>
       <td><%= link_to 'Back to Articles', articles_path, class: "btn" %></td>
       <td><%= link_to 'Edit', edit_article_path(@article) if user_signed_in? %></td>
       <td><%= link_to 'delete', @article, method: :delete, data:{confirm:"Do you really want to delete?"} if user_signed_in?  %> </td>
      </tr>
    </tbody>
  </table>
</div>
